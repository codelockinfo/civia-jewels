{% schema %}
{
  "name": "Image With Text",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Latest Collections"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Timeless Elegance With Modern Luxury"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Experience the Renaissance reborn in each brilliant diamond. Browse our curated collections that blend modern elegance with timeless beauty."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Image With Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}
<div class="container">
  <div class="image-text-section" style="display: flex; align-items: center; gap: 40px; padding: 60px 0;">
    <div class="text" style="flex: 1;">
      <p style="font-size: 26px; margin-bottom: 0.5rem; color: #000; padding-bottom:25px">{{ section.settings.subheading }}</p>
      <p style="font-size: 50px; margin: 0 0 1rem; font-weight: semi-bold; line-height:10px">{{ section.settings.heading }}</p>
      <p style="font-size: 16px; color: #333;">{{ section.settings.description }}</p>
    </div>
    <div class="image" style="flex: 1;">
      {% if section.settings.image %}
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="Image"
        >
      {% endif %}
    </div>
  </div>
</div>

<style>
  .container{
    max-width:1400px;
  }

    .image-text-section {
    display: flex;
    align-items: center;
    gap: 40px;
    padding: 60px 0;
  }

  .image-text-section .text {
    flex: 1;
  }

  .image-text-section .image {
    flex: 1;
  }

  .image-text-section img {
    max-width: 100%;
    /* border-radius: 8px; */
  }
</style>

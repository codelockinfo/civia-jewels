{% schema %}
{
  "name": "Commitment Icons",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Renaissance Commitment"
    }
  ],
  "blocks": [
    {
      "type": "icon_block",
      "name": "Icon Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Circle Background Color",
          "default": "#000000"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Icon Label",
          "default": "Eco-Friendly Diamonds"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Commitment Icons",
      "category": "Custom",
      "blocks": [
        { "type": "icon_block" },
        { "type": "icon_block" },
        { "type": "icon_block" }
      ]
    }
  ]
}
{% endschema %}

<div class="commitment-wrapper">
  <div class="commitment-heading">{{ section.settings.heading }}</div>
  <div class="commitment-icons">
    {% for block in section.blocks %}
      <div class="commitment-item">
        {% if block.settings.icon != blank %}
          <div class="icon-circle" style="background-color: {{ block.settings.bg_color }};">
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="icon">
          </div>
        {% endif %}
        <p class="icon-label">{{ block.settings.label }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
    .commitment-wrapper {
    text-align: center;
    padding: 60px 20px;
  }

  .commitment-heading {
    font-size: 32px;
    margin-bottom: 40px;
  }

  .commitment-icons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
  }

  .commitment-item {
    width: 140px;
    text-align: center;
  }

  .icon-circle {
    width: 120px;
    height: 120px;
    margin: 0 auto 15px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-circle img {
    width: 50%;
    height: auto;
    object-fit: contain;
  }

  .icon-label {
    font-size: 14px;
    text-transform: uppercase;
  }
</style>

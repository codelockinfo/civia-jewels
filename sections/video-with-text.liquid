{% schema %}
{
  "name": "Video With Text ",
  "settings": [
    {
      "type": "video",
      "id": "video_url",
      "label": "Upload Video",

    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customize Your Perfect Diamond Ring & More With Us"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Shop your ideal diamond ring with Renaissance Jewelâ€™s expert craftsmen. Collaborate with our experts to create a piece of custom diamond jewelry that's truly unique to you."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",

    }
  ],
  "presets": [
    {
      "name": "Video With Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-video-text">
  <div class="custom-video">
    {% if section.settings.video_url != blank %}
      <a href="{{ section.settings.button_link }}">
        <video autoplay muted loop playsinline>
          <source src="{{ section.settings.video_url.sources[0].url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </a>
    {% endif %}
  </div>

  <div class="custom-text">
    <div class="container-text">
      <div class="video-heading">{{ section.settings.heading }}</div>
      <div class="video-desc">{{ section.settings.text }}</div>
      {% if section.settings.button_link != blank and section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="custom-button">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

<style>
    .custom-video-text {
    display: flex;
    align-items: center;
    justify-content: center;
    /* gap: 40px; */
    background-color: #000;
    color: #fff;
    flex-wrap: wrap;
  }

  .custom-video {
    flex: 1;
    min-width: 300px;

  }
  .custom-video video {
    width: 100%;
    height: 100%;
  }

  .custom-text {
    flex: 1;
    min-width: 300px;
  }
  .container-text{
    max-width:580px
  }
  .video-heading{
    padding-bottom: 15px;
    font-size: 32px;
    font-family: sans-serif;
    line-height: 1.4;
  }
  .video-desc{
    padding-bottom: 15px;
    font-size: 15px;
    font-family: sans-serif;
    line-height: 25px;
    max-width:540px
  }
  .custom-button {
    color: #fff;
    padding: 11px 31px;
    font-size: 15px;
    letter-spacing: 1.5px;
    border: 1px solid #fff;
    border-radius: 5px;
    text-decoration: none;
    transition: background 0.3s, color 0.3s;
    display: inline-block;
  }

  .custom-button:hover {
    background-color: #fff;
    color: #000;
  }
</style>

{%- liquid
    assign weight = block.settings.weight
-%}
<div class="diamond-weight-selector">
  <label class="dw-label">Diamond Weight: </label>
  <div class="dw-options">
      <button 
        class="dw-option {% if forloop.first %}active{% endif %}" 
        onclick="selectDiamondWeight(this)">
         {{ weight }}Carat
      </button>
  </div>
</div>

<style>
  .diamond-weight-selector {
  margin: 20px 0;
}

.dw-label {
  display: block;
  font-weight: 600;
  margin-bottom: 10px;
}

.dw-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.dw-option {
  padding: 10px 18px;
  border: 2px solid #ccc;
  background: #fff;
  border-radius: 25px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
}

.dw-option.active {
  border-color: #000;
  font-weight: bold;
}
</style>
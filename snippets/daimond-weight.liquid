<div class="diamond-weight-selector">
  <label class="dw-label">Diamond Weight: <span id="selected-weight">1 Carat</span></label>
  <div class="dw-options">
    {% assign weights = "2,1.5,2,2.5,3,4,5,6,7,8,9" | split: "," %}
    {% for weight in weights %}
      <button 
        class="dw-option {% if forloop.first %}active{% endif %}" 
        onclick="selectDiamondWeight(this)">
        {{ weight }} Carat
      </button>
    {% endfor %}
  </div>
</div>

<style>
  .diamond-weight-selector {
  margin: 20px 0;
}

.dw-label {
  display: block;
  font-weight: 600;
  margin-bottom: 10px;
}

.dw-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.dw-option {
  padding: 10px 18px;
  border: 2px solid #ccc;
  background: #fff;
  border-radius: 25px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
}

.dw-option.active {
  border-color: #000;
  font-weight: bold;
}
</style>

<script>
  function selectDiamondWeight(button) {
    // Remove active from all
    document.querySelectorAll('.dw-option').forEach(btn => btn.classList.remove('active'));
    // Add to clicked
    button.classList.add('active');
    // Update label
    document.getElementById('selected-weight').innerText = button.innerText;
  }
</script>
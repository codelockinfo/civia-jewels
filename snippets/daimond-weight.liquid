{% for block in section.blocks %}
  {% if block.type == 'diamond-weight' %}
    {% assign weight_keys = "weight1,weight2,weight3,weight4,weight5,weight6,weight7,weight8,weight9,weight10,weight11,weight12" | split: "," %}

    {% for key in weight_keys %}
      {% assign weight_value = block.settings[key] %}
      {% if weight_value != blank %}
        <p>{{ weight_value }}</p>
      {% endif %}
    {% endfor %}
  {% endif %}
{% endfor %}


<!-- <pre>{{ weight1 | json }}</pre>
<pre>{{ weight2 | json }}</pre> -->


<div class="diamond-weight-selector">
  <label class="dw-label">Diamond Weight: </label>
  <div class="dw-options">
    {%- for weight in weights -%}
      {%- if weight != blank -%}
        <button
          class="dw-option {% if forloop.first %}active{% endif %}"
          onclick="selectDiamondWeight(this)">
          {{ weight }} Carat
        </button>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

<style>
  .diamond-weight-selector {
  margin: 20px 0;
}

.dw-label {
  display: block;
  font-weight: 600;
  margin-bottom: 10px;
}

.dw-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.dw-option {
  padding: 10px 18px;
  border: 2px solid #ccc;
  background: #fff;
  border-radius: 25px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
}

.dw-option.active {
  border-color: #000;
  font-weight: bold;
}
</style>
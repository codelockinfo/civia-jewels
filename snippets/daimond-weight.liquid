<div class="diamond-weight-selector">
  <label class="dw-label">Diamond Weight: <span id="selected-weight">{{ section.settings.weight_1 }}</span></label>
  <div class="dw-options">
    
        <button 
          class="dw-option {% if forloop.first %}active{% endif %}" 
          onclick="selectDiamondWeight(this)">
          {{ weight_value }}
        </button>
     
  </div>
</div>

<script>
  function selectDiamondWeight(button) {
    document.querySelectorAll('.dw-option').forEach(btn => btn.classList.remove('active'));
    button.classList.add('active');
    document.getElementById('selected-weight').innerText = button.innerText;
  }
</script>

<style>
  .diamond-weight-selector {
    margin: 20px 0;
  }
  .dw-label {
    font-weight: 600;
    margin-bottom: 10px;
    display: block;
  }
  .dw-options {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  .dw-option {
    padding: 10px 18px;
    border: 2px solid #ccc;
    background: #fff;
    border-radius: 25px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.2s ease;
  }
  .dw-option.active {
    border-color: #000;
    font-weight: bold;
  }
</style>

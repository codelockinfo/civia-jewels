<div class="diamond-weight-selector">
  <label class="dw-label">Diamond Shape: </label>
  <div class="dw-options">

    {% assign weight_keys = "weight1,weight2,weight3,weight4,weight5,weight6,weight7,weight8,weight9,weight10,weight11,weight12" | split: "," %}
    {% assign image_keys = "diamond_image1,diamond_image2,diamond_image3,diamond_image4,diamond_image5,diamond_image6,diamond_image7,diamond_image8,diamond_image9,diamond_image10,diamond_image11,diamond_image12" | split: "," %}

    {% assign product_handle = product.handle %}
    {% assign all_shapes = '' | split: ',' %}
    {% assign current_shape = '' %}
    {% for block in section.blocks %}
      {% if block.type == 'diamond-weight' %}
        {% for i in (0..11) %}
          {% assign shape = block.settings[weight_keys[i]] | downcase | replace: ' ', '-' %}
          {% if shape != blank and product_handle contains shape %}
            {% assign current_shape = shape %}
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}

    {% for block in section.blocks %}
      {% if block.type == 'diamond-weight' %}
        {% for i in (0..11) %}
          {% assign shape = block.settings[weight_keys[i]] | downcase | replace: ' ', '-' %}
          {% assign shape_label = block.settings[weight_keys[i]] %}
          {% assign image = block.settings[image_keys[i]] %}

          {% if shape != blank %}
            {% if current_shape != blank and shape != current_shape %}
              {% assign new_handle = product_handle | replace: current_shape, shape %}
            {% else %}
              {% assign new_handle = product_handle %}
            {% endif %}
            
            <a class="dw-option{% if shape == current_shape %} active{% endif %}" href="/products/{{ new_handle }}">
              {% if image != blank %}
                <img src="{{ image | image_url: width: 100 }}" alt="{{ shape_label }}" class="dw-image" />
              {% endif %}
              <div class="dw-label-text">{{ shape_label }}</div>
            </a>
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
    
  </div>
</div>


<style>
  .diamond-weight-selector {
    margin: 20px 0;
  }

  .dw-label {
    display: block;
    font-weight: 600;
    margin-bottom: 10px;
    font-size: 25px;

  }

  .dw-options {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .dw-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    text-align: center;
    transition: transform 0.2s ease;
  }

  .dw-option:hover {
    transform: scale(1.05);
  }

  .dw-image {
    width: 80px;
    height: 80px;
    object-fit: contain;
    background: #fff;
  }

  .dw-label-text {
    margin-top: 2px;
    font-size: 13px;
    color: #333;
  }

  .dw-option.active .dw-image {
    border-color: #000;
  }
</style>

<script>
  function selectDiamondWeight(el) {
    document.querySelectorAll('.dw-option').forEach(function(option) {
      option.classList.remove('active');
    });
    el.classList.add('active');
  }
</script>

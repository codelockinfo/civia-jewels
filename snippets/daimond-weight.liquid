  assign weight1 = block.settings.weight1
  assign weight2 = block.settings.weight2
  assign weight3 = block.settings.weight3
  assign weight4 = block.settings.weight4
  assign weight5 = block.settings.weight5
  assign weight6 = block.settings.weight6
  assign weight7 = block.settings.weight7
  assign weight8 = block.settings.weight8
  assign weight9 = block.settings.weight9
  assign weight10 = block.settings.weight10
  assign weight11 = block.settings.weight11
  assign weight12 = block.settings.weight12

  assign weight_string = weight1
  assign weight_string = weight_string | append: ',' | append: weight2
  assign weight_string = weight_string | append: ',' | append: weight3
  assign weight_string = weight_string | append: ',' | append: weight4
  assign weight_string = weight_string | append: ',' | append: weight5
  assign weight_string = weight_string | append: ',' | append: weight6
  assign weight_string = weight_string | append: ',' | append: weight7
  assign weight_string = weight_string | append: ',' | append: weight8
  assign weight_string = weight_string | append: ',' | append: weight9
  assign weight_string = weight_string | append: ',' | append: weight10
  assign weight_string = weight_string | append: ',' | append: weight11
  assign weight_string = weight_string | append: ',' | append: weight12

  assign weights = weight_string | split: ','
-%}
{% for block in section.blocks %}
  {{ forloop.index }}  *****
  {% if block.type == 'diamond-weight' %}
    <pre>{{ block.settings.weight1 | json }}</pre>
  {% endif %}
{% endfor %}

<!-- <pre>{{ weight1 | json }}</pre>
<pre>{{ weight2 | json }}</pre> -->


<div class="diamond-weight-selector">
  <label class="dw-label">Diamond Weight: </label>
  <div class="dw-options">
    {%- for weight in weights -%}
      {%- if weight != blank -%}
        <button
          class="dw-option {% if forloop.first %}active{% endif %}"
          onclick="selectDiamondWeight(this)">
          {{ weight }} Carat
        </button>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

<style>
  .diamond-weight-selector {
  margin: 20px 0;
}

.dw-label {
  display: block;
  font-weight: 600;
  margin-bottom: 10px;
}

.dw-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.dw-option {
  padding: 10px 18px;
  border: 2px solid #ccc;
  background: #fff;
  border-radius: 25px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
}

.dw-option.active {
  border-color: #000;
  font-weight: bold;
}
</style>
<style>
  .metal-options {
    display: flex;
    gap: 20px;
    margin-top: 12px;
    align-items: center;
    margin-bottom: 15px;
  }

  .metal-option {
    text-align: center;
    cursor: pointer;
    font-size: 14px;
  }

  .metal-circle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 2px solid transparent;
    display: inline-block;
    overflow: hidden;
    transition: border-color 0.2s ease-in-out;
  }

  .metal-option.active img {
    border: 2px solid #000!important;
  }

  .metal-option.active .metal-label {
    font-weight: bold !important;
   }
  .metal-label {
    display: block;
    margin-top: 6px;
    color: #333;
  }

  .metal-option input[type="radio"]:checked ~ .metal-label {
    font-weight: bold;
  }
</style>

<div class="product-metals">
  <strong>Metal:</strong>

  {% assign metal_colors = product.metafields.custom.color | split: ',' %}

  <div class="metal-options-wrapper" style="display: flex; gap: 15px;">
    {% for metal in metal_colors %}
      {% assign trimmed_metal = metal | strip %}
      {% assign metal_img_url = '' %}

      {%- case trimmed_metal -%}
        {%- when 'Silver' -%}
          {% assign metal_img_url = 'https://cdn.shopify.com/s/files/1/0764/3211/3912/files/silver.png' %}
        {%- when 'Rose Gold' -%}
          {% assign metal_img_url = 'https://cdn.shopify.com/s/files/1/0764/3211/3912/files/rosegold.png' %}
        {%- when 'Gold' -%}
          {% assign metal_img_url = 'https://cdn.shopify.com/s/files/1/0764/3211/3912/files/gold.png' %}
        {%- when 'White Gold' -%}
          {% assign metal_img_url = 'https://cdn.shopify.com/s/files/1/0764/3211/3912/files/Item_1_1.png?v=1752215923' %}
        {%- else -%}
          {% assign metal_img_url = 'https://via.placeholder.com/36' %}
      {%- endcase -%}

      <a
        href="#"
        class="metal-option"
        style="text-align: center; text-decoration: none; color: inherit;"
      >
        <img
          src="{{ metal_img_url }}"
          alt="{{ trimmed_metal }}"
          width="36"
          height="36"
          style="border-radius: 50%; border: 1px solid #ccc; margin: 0 auto;"
        >
        <div class="metal-label" style="margin-top: 5px; font-size: 14px;">
          {{ trimmed_metal }}
        </div>
      </a>
    {% endfor %}
  </div>
  <script>
    function selectDiamondWeight(el) {
          document.querySelectorAll('.metal-option').forEach(function(option) {
          option.classList.remove('active');
          });
          el.classList.add('active');
    }
  </script>
</div>

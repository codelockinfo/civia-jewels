{% comment %}
  <style>
    .metal-options {
      display: flex;
      gap: 20px;
      margin-top: 12px;
      align-items: center;
      margin-bottom: 15px;
    }

    .metal-option {
      text-align: center;
      cursor: pointer;
      font-size: 14px;
    }

    .metal-circle {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      border: 2px solid transparent;
      display: inline-block;
      overflow: hidden;
      transition: border-color 0.2s ease-in-out;
    }

    .metal-option.active img {
      border: 2px solid #000!important;
    }

    .metal-option.active .metal-label {
      font-weight: bold !important;
     }
    .metal-label {
      display: block;
      margin-top: 6px;
      color: #333;
    }

    .metal-option input[type="radio"]:checked ~ .metal-label {
      font-weight: bold;
    }
  </style>

  <div class="product-metals">
    <strong>Metal:</strong>

    {% assign metal_colors = product.metafields.shopify["color-pattern"] | split: ',' %}




    <div class="metal-options-wrapper" style="display: flex; gap: 15px;">
      {% for metal in metal_colors %}
        {% assign trimmed_metal = metal | strip %}
        {% assign metal_img_url = '' %}

        {%- case trimmed_metal | downcase -%}
          {%- when 'white gold' -%}
            {% assign metal_img_url = 'https://cdn.shopify.com/s/files/1/0764/3211/3912/files/Item_1_af2b7e5c-1850-40ac-884a-3b98f426a78b.png?v=1752305011' %}
          {%- when 'rose gold' -%}
            {% assign metal_img_url = 'https://cdn.shopify.com/s/files/1/0764/3211/3912/files/Item_e5d65032-eae1-4efd-a9cd-779db0346592.png?v=1752305011' %}
          {%- when 'yellow gold' -%}
            {% assign metal_img_url = 'https://cdn.shopify.com/s/files/1/0764/3211/3912/files/Item_2_27dcc433-493f-4107-a96a-7dff7097dae8.png?v=1752305011' %}
          {%- else -%}
            {% assign metal_img_url = 'https://via.placeholder.com/36?text=No+Match' %}
        {%- endcase -%}

        <a
          href="#"
          class="metal-option"
          style="text-align: center; text-decoration: none; color: inherit;"
        >
          <img
            src="{{ metal_img_url }}"
            alt="{{ trimmed_metal }}"
            width="36"
            height="36"
            style="border-radius: 50%; border: 1px solid #ccc; margin: 0 auto;"
          >
          <div class="metal-label" style="margin-top: 5px; font-size: 14px;">
            {{ trimmed_metal }}
          </div>
        </a>
      {% endfor %}
    </div>

    <script>
      function selectDiamondWeight(el) {
            document.querySelectorAll('.metal-option').forEach(function(option) {
            option.classList.remove('active');
            });
            el.classList.add('active');
      }
    </script>
  </div>
{% endcomment %}

<style>
  .metal-options-wrapper {
    display: flex;
    gap: 15px;
    margin-top: 12px;
    align-items: center;
    margin-bottom: 15px;
  }

  .metal-option {
    text-align: center;
    cursor: pointer;
    font-size: 14px;
  }

  .metal-option img {
    border-radius: 50%;
    border: 1px solid #ccc;
    margin: 0 auto;
    width: 36px;
    height: 36px;
    object-fit: cover;
  }

  .metal-option .active-img {
    border: 2px solid #000 !important;
  }

  .metal-option .active-text  {
    font-weight: 500 !important;
    color: #000 ;
  }

  .metal-label {
    display: block;
    margin-top: 6px;
    color: #333;
  }
</style>

<div class="product-metals">
  <strong>Metal:</strong>
  {% assign handle = product.handle %}
  {% assign metals = 'rose,white,yellow' | split: ',' %}
  {% assign matched_metal = '' %}
  {% for metal in metals %}
    {% if handle contains metal %}
      {% assign matched_metal = metal %}
      {% break %}
    {% endif %}
  {% endfor %}

  <div class="metal-options-wrapper" style="display: flex; gap: 12px;">
    {%- assign updated_handle = handle | replace: matched_metal, 'white' -%}
    <a
      href="/products/{{ updated_handle }}"
      class="metal-option"
      onclick="selectMetalOption(this); return false;"
      style="text-align: center; text-decoration: none; color: inherit;"
    >
      <img
        class="{% if matched_metal == 'white' %}active-img{% endif %}"
        src="https://cdn.shopify.com/s/files/1/0713/6598/4514/files/Item_1.png?v=1728998464"
        alt="White Gold"
      >
      <div
        class="metal-label{% if matched_metal == 'white' %} active-text{% endif %}"
        style="margin-top: 5px; font-size: 14px;"
      >
        White Gold
      </div>
    </a>

    {% assign updated_handle = handle | replace: matched_metal, 'rose' %}
    <a
      href="/products/{{ updated_handle }}"
      class="metal-option"
      onclick="selectMetalOption(this); return false;"
      style="text-align: center; text-decoration: none; color: inherit;"
    >
      <img
        class="{% if matched_metal == 'rose' %}active-img{% endif %}"
        src="https://cdn.shopify.com/s/files/1/0713/6598/4514/files/Item.png?v=1728998267"
        alt="Rose Gold"
      >
      <div
        class="metal-label{% if matched_metal == 'rose' %} active-text{% endif %}"
        style="margin-top: 5px; font-size: 14px;"
      >
        Rose Gold
      </div>
    </a>

    {% assign updated_handle = handle | replace: matched_metal, 'yellow' %}
    <a
      href="/products/{{ updated_handle }}"
      class="metal-option"
      onclick="selectMetalOption(this); return false;"
      style="text-align: center; text-decoration: none; color: inherit;"
    >
      <img
        class="{% if matched_metal == 'yellow' %}active-img{% endif %}"
        src="https://cdn.shopify.com/s/files/1/0713/6598/4514/files/Item_2.png?v=1728998531"
        alt="Yellow Gold"
      >
      <div
        class="metal-label{% if matched_metal == 'yellow' %} active-text{% endif %}"
        style="margin-top: 5px; font-size: 14px;"
      >
        Yellow Gold
      </div>
    </a>
  </div>
</div>


<script>
  function selectMetalOption(el) {
    var link = el.getAttribute('href');
    if (link) {
      window.location.href = link;
    }
  }
</script>
